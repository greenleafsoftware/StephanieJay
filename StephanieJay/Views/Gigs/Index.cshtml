@model StephanieJay.Classes.Gigs
@{
    ViewBag.Title = "Gigs";
}

<div class="row">
    <div class="span12">
        <div class="box">
            <table class="table">
                <thead>
                    <tr>
                        <th>Date.</th>
                        <th>Venue.</th>
                        <th>City.</th>
                        <th>Country.</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var Group in Model.groups)
                {
                    <tr><td colspan="4">@Group.name</td></tr>
                    foreach (var Gig in Group.gigs)
                    {
                        <tr>
                            <td>@Gig.date</td>
                            <td>@Gig.venue</td>
                            <td>@Gig.city</td>
                            <td>@Gig.country</td>
                        </tr>
                    }
                }
               </tbody>
            </table>
        </div>
    </div>
</div>

