<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/CSS/style.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/CSS/bootstrap-responsive.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/stratus.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ultimate.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-carousel.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-transition.js")"></script>
    <script src="http://cufon.shoqolate.com/js/cufon-yui.js" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/yanone-kaffeesatz.cufonfonts.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.dotdotdot-1.5.1.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.parss.uncompressed.js")" type="text/javascript"></script>


    <script type="text/javascript">
        $(document).ready(function () {
            $.stratus({
                align: 'top',
                theme: 'http://stratus.sc/themes/dark.css',
                color: '000fff',
                links: 'http://soundcloud.com/stephaniejay/stephanie-jay-what-you-dont'
            });

            /*Triple Dots! Woop*/
            $(".box .box-item").dotdotdot();

            /*Carousel*/
            $('.carousel').carousel({ interval: 2000 });
        
            /*News Feed*/
            $("#news").PaRSS(
                'http://feeds.bbci.co.uk/news/rss.xml', // url to the feed
                3, // number of items to retrieve
                "M jS Y, g:i a", // date format
                true, // include descriptions?
                function() {
                    /* optional callback function performed after list is appended to the page */
                }
            );
        });

        Cufon.replace('.box h2, .box h3, .section h2, #nav a', { fontFamily: 'Yanone Kaffeesatz Regular', hover: true });

    </script>   
</head>
<body>

    <div id="bg">

    <div id="logo"></div>
    <div class="wrapper">
        <div id="nav">
            @Html.ActionLink("Home", "Index", "Home")
            @Html.ActionLink("Gigs", "Index", "Gigs")
            @Html.ActionLink("Gallery", "Index", "Gallery")
            @Html.ActionLink("Mixes", "Index", "Mixes")
            @Html.ActionLink("Bio", "Index", "Bio")
            @Html.ActionLink("Contact", "Index", "Contact")
            @Html.ActionLink("Venues", "Index", "Venues")
        </div>
    </div>

    <div class="container">
        @RenderBody()
        <div id="logindisplay">
            @Html.Partial("_LogOnPartial")
        </div>
    </div>


    </div>


    <div id="footer">
    <div class="container">
    

        <div class="row">
            <div class="span6">
                <div class="row">
                    <div class="span2">
                        <div class="section">
                            <h2>Quick Links.</h2>
                            <div class="item">@Html.ActionLink("Home", "Index", "Home")</div>
                            <div class="item">@Html.ActionLink("Gigs", "Index", "Gigs")</div>
                            <div class="item">@Html.ActionLink("Gallery", "Index", "Gallery")</div>
                            <div class="item">@Html.ActionLink("Mixes", "Index", "Mixes")</div>
                            <div class="item">@Html.ActionLink("Bio", "Index", "Bio")</div>
                            <div class="item">@Html.ActionLink("Contact", "Index", "Contact")</div>
                            <div class="item">@Html.ActionLink("Venues", "Index", "Venues")</div>
                        </div>
                    </div>
                    <div class="span4">
                    </div>
                </div>
            </div>
            <div class="span6">
            </div>
        </div>
        <div class="row">
            <div class="span12"><div class="center">Copyright © 2012 Stephanie Jay</div></div>
        </div>
    </div>
    </div>

</body>
</html>
