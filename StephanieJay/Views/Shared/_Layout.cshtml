<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/CSS/style.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/stratus.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/ultimate.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $.stratus({
                align: 'top',
                theme: 'http://stratus.sc/themes/dark.css',
                color: '000fff',
                links: 'http://soundcloud.com/stephaniejay/stephanie-jay-what-you-dont'
            });
        });
    </script>   
</head>
<body>
    <div id="bg">
        <div id="logo"></div>
        <div class="wrapper">
            <div id="nav">
                @Html.ActionLink("Home", "Index", "Home")
                @Html.ActionLink("Gigs", "Gigs", "Gigs")
                @Html.ActionLink("Gallery", "Gallery", "Gallery")
                @Html.ActionLink("Mixes", "Mixes", "Mixes")
                @Html.ActionLink("Bio", "Bio", "Bio")
                @Html.ActionLink("Contact", "Contact", "Contact")
                @Html.ActionLink("Venues", "Venues", "Venues")
            </div>
        </div>
        <div id="slider">
            <div id="slider-container">
                <div id="slider-inner">
                    <div class="slide">
                        <a target="_blank" href="#"><img alt="StephanieJay Slide" src="../../Images/Content/slide-1.jpg" /></a></div>
                    <div class="slide">
                        <a target="_blank" href="#"><img alt="StephanieJay Slide" src="../../Images/Content/slide-3.jpg" /></a></div>
                    <div class="slide">
                        <a target="_blank" href="#"><img alt="StephanieJay Slide" src="../../Images/Content/slide-2.jpg" /></a>                        </div>
                    <div class="slide">
                        <a target="_blank" href="#"><img alt="StephanieJay Slide" src="../../Images/Content/slide-1.jpg" /></a>                        </div>
                    <div class="slide">
                        <a target="_blank" href="#"><img alt="StephanieJay Slide" src="../../Images/Content/slide-1.jpg" /></a>                        </div>
                    <div class="slide">
                        <a target="_blank" href="#"><img alt="StephanieJay Slide" src="../../Images/Content/slide-1.jpg" /></a>                        </div>
                </div>
                <a href="#" id="slide-left"><span id="slider-arrow-left"></span></a>
                <a href="#" id="slide-right"><span id="slider-arrow-right"></span></a>
                <a href="#" id="slide-left-fade"><span id="slider-fade-left"></span></a>
                <a href="#" id="slide-right-fade"><span id="slider-fade-right"></span></a>
                <div id="slider-black-left"></div>
                <div id="slider-black-right"></div>
                <div id="hearts">
                    <a href="#" id="heart1"><span class="heart heart-active"></span></a>
                    <a href="#" id="heart2"><span class="heart"></span></a>
                    <a href="#" id="heart3"><span class="heart"></span></a>
                    <a href="#" id="heart4"><span class="heart"></span></a>
                </div>
            </div>
        </div>
        <div id="logindisplay">
            @Html.Partial("_LogOnPartial")
        </div>
        <div id="main">
            @RenderBody()
        </div>
        <div>
            <div id="footer"></div>
        </div>
    </div>
</body>
</html>
