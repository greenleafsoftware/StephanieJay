<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/CSS/style.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/stratus.js")" type="text/javascript"></script>
    <script>
        $(document).ready(function () {
            $.stratus({
                align: 'top',
                theme: 'http://stratus.sc/themes/dark.css',
                color: '000fff',
                links: 'http://soundcloud.com/stephaniejay/stephanie-jay-what-you-dont'
            });
        });
    </script>   
</head>
<body>
    <div id="bg">
        <header>
            <div id="logo"></div>
            <div class="wrapper">
                <div id="nav">
                    <a href="/Shows"><span id="nav-shows">Shows</span></a>

                    @Html.ActionLink("Home", "Index", "Home", new { @id = "nav-news" })
                    @Html.ActionLink("Gigs", "Gigs", "Gigs")
                    @Html.ActionLink("Gallery", "Gallery", "Gallery")
                    @Html.ActionLink("Mixes", "Mixes", "Mixes")
                    @Html.ActionLink("Bio", "Bio", "Bio")
                    @Html.ActionLink("Contact", "Contact", "Contact")
                    @Html.ActionLink("Venues", "Venues", "Venues")
                </div>
            </div>

            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <nav>
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>
            </nav>
        </header>
        <section id="main">
            @RenderBody()
        </section>
        <footer>
            <div id="footer">test</div>
        </footer>
    </div>
</body>
</html>
