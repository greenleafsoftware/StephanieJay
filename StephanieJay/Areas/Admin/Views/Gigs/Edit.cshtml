@model StephanieJay.Classes.Gig

@{
    ViewBag.Title = "Edit Gigs";
}

<div class="row-fluid">
    <div class="span2"></div>
    <div class="span9">
        <div class="box">
            <h2>Edit Gigs</h2>
            @using (Html.BeginForm("Edit", "Gigs", new { gigs = Model }, FormMethod.Post, new { Class = "form-horizontal" }))
            {
                <div class="control-group">
                    <label class="control-label" for="contactname">Title<span class="required">*</span></label>
                    <div class="controls">
                        @Html.TextBoxFor(x => x.date)
                        @Html.HiddenFor(x => x.guid)
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="email">Link<span class="required">*</span></label>
                    <div class="controls">
                        @Html.TextBoxFor(x => x.venue)
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="message">Description<span class="required">*</span></label>
                    <div class="controls">
                        @Html.TextAreaFor(x => x.city)
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="message">Description<span class="required">*</span></label>
                    <div class="controls">
                        @Html.TextAreaFor(x => x.country)
                    </div>
                </div>
                <div class="control-group">
                    <div class="controls">
                        <button type="submit" class="btn btn-primary"><i class="icon-ok"></i> Save</button>
                    </div>
                </div>
            }
        </div>
	</div><!-- form -->
</div>